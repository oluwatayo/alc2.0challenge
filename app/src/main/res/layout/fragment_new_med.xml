<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/DialogTheme">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/med_name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <EditText
                android:id="@+id/med_name_editText"
                style="@style/EditTexts"
                android:hint="@string/medication_name"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/med_description_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/med_name_input_layout">

            <EditText
                android:id="@+id/med_description_editText"
                style="@style/EditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/medication_description"
                android:inputType="textLongMessage" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/med_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/med_description_input_layout"></Spinner>

        <Button
            android:id="@+id/start_date_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/baumans"
            android:text="@string/choose_start_date"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/med_type_spinner">

        </Button>

        <TextView
            android:id="@+id/start_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/baumans"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintBottom_toBottomOf="@id/start_date_selector"
            app:layout_constraintLeft_toRightOf="@id/start_date_selector"
            app:layout_constraintTop_toTopOf="@id/start_date_selector"
            tools:text="12/09/12" />

        <Button
            android:id="@+id/end_date_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/material_red"
            android:fontFamily="@font/baumans"
            android:text="@string/choose_end_date"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/start_date_selector"
            app:layout_constraintTop_toBottomOf="@id/start_date_selector">

        </Button>

        <TextView
            android:id="@+id/end_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/baumans"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintBottom_toBottomOf="@id/end_date_selector"
            app:layout_constraintLeft_toRightOf="@id/end_date_selector"
            app:layout_constraintTop_toTopOf="@id/end_date_selector"
            tools:text="12/09/12" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/interval_inputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/interval_spinner"
            app:layout_constraintTop_toBottomOf="@id/end_date_selector">

            <EditText
                style="@style/EditTexts"
                android:hint="@string/_3"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/interval_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/interval_inputLayout"
            app:layout_constraintLeft_toRightOf="@id/interval_inputLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/interval_inputLayout">

        </Spinner>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/interval_spinner">

            <Button
                android:id="@+id/add_med_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_add_red_24dp"
                android:drawableStart="@drawable/ic_add_red_24dp"
                android:fontFamily="@font/baumans"
                android:text="@string/add_medication"
                android:textColor="@color/white" />

        </FrameLayout>


    </android.support.constraint.ConstraintLayout>

</ScrollView>
