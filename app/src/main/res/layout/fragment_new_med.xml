<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:theme="@style/DialogTheme">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/med_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <EditText
            android:id="@+id/med_name_editText"
            style="@style/EditTexts"
            android:hint="@string/medication_name"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/med_description_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/med_name_input_layout">

        <EditText
            android:id="@+id/med_description_editText"
            style="@style/EditTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/medication_description"
            android:inputType="textLongMessage" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/med_type_spinner"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/med_description_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>


</android.support.constraint.ConstraintLayout>