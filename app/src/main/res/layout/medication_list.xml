<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/med_type_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/notifsmallicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/medication_type"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/med_name"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        tools:text="Antibiotics"
        app:layout_constraintTop_toTopOf="@id/med_type_imageView"
        app:layout_constraintLeft_toRightOf="@id/med_type_imageView"
        app:layout_constraintBottom_toBottomOf="@id/med_type_imageView"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/med_next_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/med_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/med_name"
        tools:text="10:00am"
        android:layout_marginRight="16dp" />


</android.support.constraint.ConstraintLayout>